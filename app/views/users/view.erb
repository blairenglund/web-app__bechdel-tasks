<div class="user">
  <h3 class="user__head">Your Profile</h3>

  <form action="/users/<%= @user.id %>/edit" method="post">
    <div>
      <label class="user__text" for="name">Name:</label>
      <input type="text" name="name" placeholder="name" value="<%= @user.name %>">
    </div>

    <div>
      <label class="user__text" for="email">Email Address:</label>
      <input type="text" name="email" placeholder="email@address.com" value="<%= @user.email %>">
    </div>

    <div>
      <label class="user__text" for="name">Password:</label>
      <input type="password" name="password">
    </div>

    <div>
      <button type="submit">Save</button>
    </div>
  </form>

  <form action="/users/<%= @user.id %>/delete" method="post">
    <div>
      <button type="submit">Delete Account</button>
    </div>
  </form>
</div>