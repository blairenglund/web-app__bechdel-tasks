<div class="user">
  <h3 class="user__head">Log in:</h3>

  <form action="/login" method="post">
    <div>
      <label class="user__text" for="email">Email Address:</label>
      <input type="text" name="email" placeholder="email@address.com">
    </div>

    <div>
      <label class="user__text" for="name">Password:</label>
      <input type="password" name="password">
    </div>

    <div>
      <button type="submit">Sign In</button>
    </div>
  </form>
</div>